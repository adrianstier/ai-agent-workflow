// Prisma schema for AI Agent Dashboard

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  apiKeys   ApiKey[]
  projects  Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model ApiKey {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider  String   // 'anthropic' | 'openai'
  key       String   // Encrypted
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Project {
  id          String      @id @default(uuid())
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  version     String      @default("0.1")
  stage       Stage       @default(DISCOVER)
  status      Status      @default(ACTIVE)
  constraints Json?       // { timeline, budget, techStack }
  metadata    Json?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  artifacts  Artifact[]
  executions AgentExecution[]
  messages   Message[]
  decisions  Decision[]

  @@index([userId])
  @@index([status])
}

enum Stage {
  DISCOVER
  DESIGN
  BUILD
  TEST
  DEPLOY
  ANALYZE
}

enum Status {
  ACTIVE
  PAUSED
  COMPLETED
  ARCHIVED
}

model Artifact {
  id         String         @id @default(uuid())
  projectId  String
  project    Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  agentId    Int            // 0-9
  type       ArtifactType
  version    String         @default("0.1")
  status     ArtifactStatus @default(DRAFT)
  content    String         @db.Text
  metadata   Json?
  createdAt  DateTime       @default(now())
  updatedAt  DateTime       @updatedAt

  executions AgentExecution[] @relation("ExecutionArtifacts")

  @@index([projectId])
  @@index([type])
  @@index([status])
}

enum ArtifactType {
  PROBLEM_BRIEF
  COMPETITIVE_ANALYSIS
  PRD
  UX_FLOWS
  ARCHITECTURE
  CODE
  TEST_PLAN
  DEPLOYMENT_PLAN
  ANALYTICS_PLAN
  OTHER
}

enum ArtifactStatus {
  DRAFT
  REVIEW
  LOCKED
  ARCHIVED
}

model AgentExecution {
  id          String            @id @default(uuid())
  projectId   String
  project     Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  agentId     Int               // 0-9
  status      ExecutionStatus   @default(QUEUED)
  input       Json
  output      Json?
  artifacts   Artifact[]        @relation("ExecutionArtifacts")
  duration    Int?              // milliseconds
  tokensUsed  Int?
  cost        Float?            // USD
  error       String?           @db.Text
  createdAt   DateTime          @default(now())
  completedAt DateTime?
  messages    Message[]

  @@index([projectId])
  @@index([status])
  @@index([agentId])
}

enum ExecutionStatus {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

model Message {
  id          String          @id @default(uuid())
  projectId   String
  project     Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  executionId String?
  execution   AgentExecution? @relation(fields: [executionId], references: [id], onDelete: SetNull)
  role        MessageRole
  agentId     Int?            // nullable, only for agent messages
  content     String          @db.Text
  metadata    Json?
  createdAt   DateTime        @default(now())

  @@index([projectId])
  @@index([executionId])
}

enum MessageRole {
  USER
  AGENT
  SYSTEM
}

model Decision {
  id           String   @id @default(uuid())
  projectId    String
  project      Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  title        String
  context      String   @db.Text
  decision     String   @db.Text
  reasoning    String   @db.Text
  alternatives String?  @db.Text
  tradeoffs    String?  @db.Text
  reversible   Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([projectId])
}
